pipeline {
    agent any

    stages {
        stage('List files') {
            steps {
                sh 'ls -la'
            }
        }
        stage('Compile') {
            steps {
                sh 'javac -d out src/Main.java src/MainTest.java'
            }
        }
        stage('Test') {
            steps {
                sh 'java -cp "out:lib/*" MainTest'
            }
        }
        stage('Run') {
            steps {
                sh 'java -cp out Main'
            }
        }
    }

    post {
        always {
            echo 'Pipeline completed.'
            archiveArtifacts artifacts: 'out/*.class', allowEmptyArchive: true
        }
        success {
            echo 'Build and tests were successful!'
        }
        failure {
            echo 'There was an error in the pipeline.'
        }
    }
}
